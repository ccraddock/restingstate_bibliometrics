    volume = "417",
    file = "::",
    address = "Ireland",
    keywords = "-Clinical,Adult,Brain,Brain Mapping,Clinical,Female,Humans,Magnetic Resonance Imaging,Male,Nerve Net,Neural Pathways,Predictive Value of Tests,Prefrontal Cortex,Schizophrenia,research support, non-u.s. gov't",
    pmid = "17399900",
    journal = "Neurosci Lett"
}

@article{
