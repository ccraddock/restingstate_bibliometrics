    year = "2012",
    keywords = "-Clinical,Clinical,Multiple Sclerosis (MS)",
    pmid = "22706694",
    journal = "Brain Imaging Behav"
}

@article{
    Prater2012,
    author = "Prater, Katherine E and Hosanagar, Avinash and Klumpp, Heide and Angstadt, Mike and {Luan Phan}, K",
