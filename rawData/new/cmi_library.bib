    keywords = "-Basic Neuroscience,Administration, Inhalation,Adolescent,Adult,Awareness,Basic Neuroscience,Brain Mapping,Cerebral Cortex,Cerebrovascular Circulation,Cognition,Double-Blind Method,Drugs and Medications,Emotions,Humans,Magnetic Resonance Imaging,Male,Medication/Drugs,Multivariate Analysis,Netherlands,Psychotropic Drugs,Questionnaires,Regression Analysis,Spin Labels,Tetrahydrocannabinol,Young Adult,randomized controlled trial",
    pmid = "21489346",
    journal = "Int J Neuropsychopharmacol"
}

@article{
