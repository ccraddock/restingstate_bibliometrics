    volume = "104",
    file = "::",
    year = "2007",
    keywords = "-Basic Neuroscience,Basic Neuroscience,Development,Original data,rs fMRI",
    pmid = "17878310",
    journal = "Proceedings of the National Academy of Sciences of the United States of America"
}

@article{
