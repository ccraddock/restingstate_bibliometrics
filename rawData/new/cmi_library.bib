    author = "van Meer, Maurits P A and van der Marel, Kajo and Wang, Kun and Otte, Willem M and {El Bouazati}, Soufian and Roeling, Tom A P and Viergever, Max A and {Berkelbach van der Sprenkel}, Jan Willem and Dijkhuizen, Rick M",
    doi = "10.1523/JNEUROSCI.5709-09.2010",
