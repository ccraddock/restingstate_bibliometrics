@article{
    He2007,
    author = "He, Yong and Wang, Liang and Zang, Yufeng and Tian, Lixia and Zhang, Xinqing and Li, Kuncheng and Jiang, Tianzi",
    doi = "10.1016/j.neuroimage.2006.11.042",
    isbn = "1053-8119",
    language = "English",
    title = "{Regional coherence changes in the early stages of Alzheimer's disease: a combined structural and resting-state functional MRI study.}",
