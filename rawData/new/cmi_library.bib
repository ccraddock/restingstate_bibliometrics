}

@article{
    Zhuang2012,
    author = "Zhuang, Liying and Liu, Xiaoyan and Xu, Xiaohui and Yue, Chunxian and Shu, Hao and Bai, Feng and Yu, Hui and Shi, Yongmei and Zhang, Zhijun",
    doi = "10.1186/1742-2094-9-263",
