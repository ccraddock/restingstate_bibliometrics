    author = "Lin, Wei-Che and Hsu, Tun-Wei and Chen, Chao-Long and Wu, Changwei W and Lu, Cheng-Hsien and Chen, Hsiu-Ling and Li, Shau-Hsuan and Yeh, Pin-Yang and Cheng, Yu-Fan and Lin, Ching-Po",
    doi = "10.1371/journal.pone.0036986",
