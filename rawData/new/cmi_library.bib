    author = "Liao, Wei and Chen, Huafu and Feng, Yuan and Mantini, Dante and Gentili, Claudio and Pan, Zhengyong and Ding, Jurong and Duan, Xujun and Qiu, Changjian and Lui, Su and Gong, Qiyong and Zhang, Wei",
