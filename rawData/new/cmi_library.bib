    pages = "2828--2839",
    volume = "54",
    address = "United States",
    keywords = "-Animal Model,Animal Model,Animals,Artifacts,Brain,Brain Mapping,Magnetic Resonance Imaging,Male,Neural Pathways,Rats,Rats, Wistar,research support, non-u.s. gov't",
    pmid = "20974263",
