    keywords = "-Meta-Analysis/Review,1000 Functional Connectomes Project,Biomedical Research,Brain Mapping,Cognition,Humans,Magnetic Resonance Imaging,Meta-Analysis/Reviews,Positron-Emission Tomography,Terminology as Topic,research support, n.i.h., extramural",
    pmid = "21643732",
