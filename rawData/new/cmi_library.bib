    number = "1",
    pages = "25--32",
    volume = "2",
    address = "United States",
    keywords = "-Meta-Analysis/Review,-Methodology,Brain,Brain Mapping,Computer Simulation,Humans,Magnetic Resonance Imaging,Meta-Analysis/Reviews,Methodology,Models, Anatomic,Rest,Signal-To-Noise Ratio,research support, n.i.h., extramural,research support, n.i.h., intramural,research support, non-u.s. gov't",
    pmid = "22432927",
