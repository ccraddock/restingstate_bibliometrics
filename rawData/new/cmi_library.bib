    number = "6",
    pages = "986--997",
    volume = "2",
    year = "2008",
    keywords = "Autism Spectrum Disorders,Basic Neuroscience,Clinical,Methodology,Multimodal,Original data,rs fMRI",
    pmid = "19777078",
    journal = "IEEE journal of selected topics in signal processing"
}

