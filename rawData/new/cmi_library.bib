@article{
    Carhart-Harris2012,
    author = "Carhart-Harris, Robin L and Leech, Robin and Erritzoe, David and Williams, Tim M and Stone, James M and Evans, John and Sharp, David J and Feilding, Amanda and Wise, Richard G and Nutt, David J",
