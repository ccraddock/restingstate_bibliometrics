    author = "Liao, Wei and Qiu, Changjian and Gentili, Claudio and Walter, Martin and Pan, Zhengyong and Ding, Jurong and Zhang, Wei and Gong, Qiyong and Chen, Huafu",
    doi = "10.1371/journal.pone.0015238",
