    author = {la Foug\`{e}re, Christian and Zwergal, Andreas and Rominger, Axel and F\"{o}rster, Stefan and Fesl, Gunther and Dieterich, Marianne and Brandt, Thomas and Strupp, Michael and Bartenstein, Peter and Jahn, Klaus},
