@article{
    Baudrexel2011,
    author = {Baudrexel, Simon and Witte, Torsten and Seifried, Carola and von Wegner, Frederic and Beissner, Florian and Klein, Johannes C and Steinmetz, Helmuth and Deichmann, Ralf and Roeper, Jochen and Hilker, R\"{u}diger},
