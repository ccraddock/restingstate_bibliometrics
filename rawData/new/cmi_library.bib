    author = "Anticevic, Alan and Brumbaugh, Margaret S and Winkler, Anderson M and Lombardo, Lauren E and Barrett, Jennifer and Corlett, Phillip R and Kober, Hedy and Gruber, June and Repovs, Grega and Cole, Michael W and Krystal, John H and Pearlson, Godfrey D and Glahn, David C",
    doi = "10.1016/j.biopsych.2012.07.031",
