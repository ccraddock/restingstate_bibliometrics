    keywords = "Clinical,Developmental neuroimaging,Epilepsy,Epilepsy and Seizures,Multimodal",
    pmid = "21709227",
    annote = "Cited By (since 1996): 7 Export Date: 7 August 2012 Source: Scopus",
    journal = "Proceedings of the National Academy of Sciences of the United States of America"
}

