    pages = "1199--1210",
    volume = "134",
    address = "England",
    keywords = "Adolescent,Adult,Anisotropy,Brain,Cerebral Palsy,Child,Clinical,Computer-Assisted,Development,Diffusion Tensor Imaging,Diplegia,Efferent Pathways,Female,Humans,Image Processing,Infant,Leukomalacia,Magnetic Resonance Imaging,Male,Myelinated,Nerve Fibers,Newborn,Organ Size,Palsy Disorders,Periventricular,Plasy Disorders,non-u.s. gov't,research support",
    pmid = "21385750",
    journal = "Brain"
}

@article{
