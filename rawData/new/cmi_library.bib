    journal = "PLoS One"
}

@article{
    Jukuri2012,
    author = {Jukuri, Tuomas and Kiviniemi, Vesa and Nikkinen, Juha and Miettunen, Jouko and M\"{a}ki, Pirjo and J\"{a}\"{a}skel\"{a}inen, Erika and Mukkala, Sari and Koivukangas, Jenni and Nordstr\"{o}m, Tanja and Taanila, Anja and Moilanen, Irma and Heinimaa, Markus and Barnett, Jennifer H and Jones, Peter B and Murray, Graham K and Veijola, Juha},
