    author = "Pe\ {n}a-G\'{o}mez, Cleof\'{e} and Sala-Lonch, Roser and Junqu\'{e}, Carme and Clemente, Immaculada C and Vidal, D\'{\i}dac and Bargall\'{o}, N\'{u}ria and Falc\'{o}n, Carles and Valls-Sol\'{e}, Josep and Pascual-Leone, Alvaro and Bartr\'{e}s-Faz, David",
