@article{
    Diederen2012,
    author = "Diederen, K M J and Neggers, S F W and de Weijer, A D and van Lutterveld, R and Daalman, K and Eickhoff, S B and Clos, M and Kahn, R S and Sommer, I E C",
    doi = "10.1017/S0033291712002541",
