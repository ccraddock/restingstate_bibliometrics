@article{
    Flodin2012,
    author = {Flodin, P\"{a}r Daniel and Gospic, Katarina and Petrovic, Predrag and Fransson, Peter},
    doi = "10.1089/brain.2012.0081",
    isbn = "2158-0022",
    language = "ENG",
    title = "{Effects of L-dopa and oxazepam on resting-state fMRI connectivity: A randomized, cross-sectional placebo study.}",
    abstract = "Pharmacological functional brain imaging has traditionally focused on neuropharmacological modulations of event-related responses. The current study is a randomized, cross-sectional resting-state fMRI study where we gave a single dose of commonly prescribed amounts of either benzodiazepine (oxazepam), L-dopa or placebo to 81 healthy subjects. We hypothesized that connectivity in resting-state networks would be altered, and that the strength of connectivity in areas rich in target receptors would be particularly affected. Additionally, based on known anxiolytic mechanisms of benzodiazepines, we predicted modulated amygdala connectivity. To test this, we performed seed region based correlational analysis using seven seeds placed in well characterized resting-state networks, in regions with above average densities of GABA-A- or dopamine receptors and in amygdala. To alleviate the anatomical bias introduced by the a priori selected seed regions, we also carried out whole brain exploratory analysis of regional homogeneity (ReHo) and fractional amplitude of low frequency fluctuations (fALFF). Oxazepam increased functional connectivity between midline regions of the default mode network and prefrontal, parietal and cerebellar areas, but decreased connectivity between e.g. amygdala and temporal cortex. L-dopa mainly decreased connectivity between the amygdala and bilateral inferior frontal gyri and between midline regions of the default mode network (DMN). The fALFF analysis revealed that L-dopa decreased low-frequency fluctuations in cerebellum. We conclude that the overall effects of single administrations of oxazepam and L-dopa on resting-state connectivity were small both in strength and in spatial extent, and were on par with placebo effects as revealed by comparing the two placebo groups",
    mendeley-tags = "Basic Neuroscience,Drugs and Medications",
    year = "2012",
    keywords = "-Basic Neuroscience,Basic Neuroscience,Drugs and Medications,Medication/Drugs",
    pmid = "22957904",
    journal = "Brain Connect"
}

@article{
