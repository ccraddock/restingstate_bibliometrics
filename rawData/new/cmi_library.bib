    number = "3",
    pages = "373--378",
    volume = "63",
    file = "::",
    address = "Ireland",
    keywords = "-Clinical,Adult,Anxiety Disorders,Brain,Brain Mapping,Case-Control Studies,Clinical,Female,Humans,Image Processing, Computer-Assisted,Magnetic Resonance Imaging,Male,Middle Aged,Models, Neurological,research support, non-u.s. gov't",
    pmid = "17400412",
