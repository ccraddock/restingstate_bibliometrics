    pages = "1347--1359",
    volume = "27",
    file = "::",
    year = "2009",
    keywords = "-Basic Neuroscience,Basic Neuroscience,Original data,rs fMRI",
    pmid = "19559557",
    journal = "Magnetic resonance imaging"
}

