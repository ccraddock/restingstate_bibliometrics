@article{
    Doucet2012a,
    author = {Doucet, Ga\"{e}lle and Naveau, Mika\"{e}l and Petit, Laurent and Zago, Laure and Crivello, Fabrice and Jobard, Ga\"{e}l and Delcroix, Nicolas and Mellet, Emmanuel and Tzourio-Mazoyer, Nathalie and Mazoyer, Bernard and Joliot, Marc},
    doi = "10.1016/j.neuroimage.2011.11.059",
